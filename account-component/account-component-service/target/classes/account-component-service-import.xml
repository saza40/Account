<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="accountComponentService" class="com.so4it.common.bean.LazyProxyFactoryBean">
        <constructor-arg name="beanType" value="se.lexicon.account.component.service.AccountComponentService"/>
        <constructor-arg name="beanContext" ref="frameworksBeanContext"/>
    </bean>


    <bean id="orderComponentService" class="com.so4it.common.bean.LazyProxyFactoryBean">
        <constructor-arg name="beanType" value="se.lexicon.account.component.service.OrderComponentService"/>
        <constructor-arg name="beanContext" ref="frameworksBeanContext"/>
    </bean>
</beans>
